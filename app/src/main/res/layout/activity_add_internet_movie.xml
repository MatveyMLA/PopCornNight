<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="popcornnight.mati.com.popcornnight.activities.AddInternetMovie"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:weightSum="1">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/titleToSearch"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.8" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/searchImageBtn"
            android:layout_weight="0.2"
            android:src="@android:drawable/ic_menu_search" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/internetMovieListView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.8" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:weightSum="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/confirmInternetMovieBtn"
            android:id="@+id/confirmInternetMovieBtn"
            android:layout_weight="0.5" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/cancelInternetMovieBtn"
            android:id="@+id/cancelInternetMovieBtn"
            android:layout_weight="0.5" />
    </LinearLayout>

</LinearLayout>
